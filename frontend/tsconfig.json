{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@spartan-ng/ui-button-helm": [
        "./src/app/core/components/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-avatar-helm": [
        "./src/app/core/components/ui-avatar-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./src/app/core/components/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-checkbox-helm": [
        "./src/app/core/components/ui-checkbox-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./src/app/core/components/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./src/app/core/components/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-sonner-helm": [
        "./src/app/core/components/ui-sonner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-menu-helm": [
        "./src/app/core/components/ui-menu-helm/src/index.ts"
      ],
      "@spartan-ng/ui-switch-helm": [
        "./src/app/core/components/ui-switch-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
